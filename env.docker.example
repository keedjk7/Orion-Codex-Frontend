# Orion Docker Environment Configuration

# Application
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://orion_user:orion_password@postgres:5432/orion

# Keycloak Configuration
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=orion
VITE_KEYCLOAK_CLIENT_ID=orion-client

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-use-openssl-rand-base64-32

# Redis Configuration (if using Redis for sessions)
REDIS_URL=redis://redis:6379

# Security
CORS_ORIGIN=http://localhost:5000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=info
